generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  person    Person?
}

enum Role {
  ADMIN
  USER
}

enum Gender {
  MALE
  FEMALE
}

model Person {
  id            String    @id @default(uuid())
  names         String
  firstSurname  String
  secondSurname String
  age           Int
  gender        Gender
  birthDate     DateTime?
  dni           String    @unique
  address       String
  phone         String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  payments      Payment[]
  user          User?     @relation(fields: [userId], references: [id])
  userId        String?   @unique
}

model Payment {
  id        String   @id @default(uuid())
  amount    Float
  method    String
  date      DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  person    Person   @relation(fields: [personId], references: [id])
  personId  String
  service   Service  @relation(fields: [serviceId], references: [id])
  serviceId String
}

model Service {
  id          String    @id @default(uuid())
  name        String
  description String
  price       Float?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  payments    Payment[]
}
